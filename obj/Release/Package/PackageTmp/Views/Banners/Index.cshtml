@model string[]

@using (Html.BeginForm("Create", "Banners", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <h2>Banners List</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
@if (@Model.Count() != 0)
{
        <tr>
            <th>
                Banners
            </th>



        </tr>

       
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item
                </td>
                <td>
                    @*<img src="@Url.Content("~/uploads/FileUpload12011_03_02_11_49_22.jpg")" alt="IMAGES" />*@
                    <img src="@Url.Content("~/BannerUploads/"+@item )" height="32" width="32" alt="IMAGES" />

                </td>



                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Replace(".jpg", "").Replace(".png", "") }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Replace(".jpg","").Replace(".png","") })
                </td>
            </tr>
        }
        }
        else{
        <tr>No records Found</tr>
        }


    </table>

}